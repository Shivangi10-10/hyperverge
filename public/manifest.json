{
  "manifest_version": 3,
  "name": "My App",
  "short_name": "MyApp",
  "version": "1.0",
  "description": "A React project with various interactive components.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "favicon.ico" 
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "favicon.ico", 
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "theme_color": "#000000"
}
